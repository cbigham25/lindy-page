{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "es2017"
        ],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsxFactory": "React.createElement"
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}